<Window x:Class="AcadLib.UI.StatusBar.View.StatusBarMenu" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:theme="clr-namespace:Autodesk.Windows.Themes;assembly=AdUiPalettes"
		xmlns:view="clr-namespace:AcadLib.UI.StatusBar.View" mc:Ignorable="d"
		d:DataContext="{d:DesignInstance view:StatusBarMenu}" SizeToContent="WidthAndHeight" WindowStyle="None"
		ResizeMode="NoResize" WindowStartupLocation="Manual" >
	<Border BorderBrush="{Binding CurrentTheme.ControlBorderBrush, Source={x:Static theme:ThemeManager.PaletteSettings}}"
			BorderThickness="2">
		<Grid>
			<Menu ItemsSource="{Binding MenuItems}" HorizontalAlignment="Right" MinWidth="50"
					Background="{Binding CurrentTheme.TabBackgroundBrush, Source={x:Static theme:ThemeManager.PaletteSettings}}"
					Foreground="{Binding CurrentTheme.ActiveTextBrush, Source={x:Static theme:ThemeManager.PaletteSettings}}">
				<Menu.ItemsPanel>
					<ItemsPanelTemplate>
						<VirtualizingStackPanel Orientation="Vertical" />
					</ItemsPanelTemplate>
				</Menu.ItemsPanel>
			</Menu>
		</Grid>
	</Border>
</Window>