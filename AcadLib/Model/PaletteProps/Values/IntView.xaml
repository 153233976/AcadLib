<UserControl x:Class="AcadLib.PaletteProps.IntView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcadLib.PaletteProps"
		xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
		xmlns:wpf="clr-namespace:NetLib.WPF;assembly=NetLib"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		d:DataContext="{d:DesignInstance local:IntVM}"
             mc:Ignorable="d" >
	<xctk:IntegerUpDown Value="{Binding Value, UpdateSourceTrigger=LostFocus}" Minimum="{Binding Min}" Maximum="{Binding Max}" 
                       IsReadOnly="{Binding IsReadOnly}"
                       HorizontalContentAlignment="Left"
                       local:InputBindingsManager.UpdatePropertySourceWhenEnterPressed="xctk:IntegerUpDown.Value"/>
</UserControl>

