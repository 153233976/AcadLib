<UserControl x:Class="AcadLib.PaletteProps.DoubleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcadLib.PaletteProps"
		xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
		xmlns:wpf="clr-namespace:NetLib.WPF;assembly=NetLib"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		d:DataContext="{d:DesignInstance local:DoubleVM}"
             mc:Ignorable="d" >
    <xctk:DoubleUpDown Value="{Binding Value, UpdateSourceTrigger=LostFocus}" Minimum="{Binding Min}" Maximum="{Binding Max}" 
                       IsReadOnly="{Binding IsReadOnly}" ShowButtonSpinner="False"
                       HorizontalContentAlignment="Left" Background="Transparent"
                       local:InputBindingsManager.UpdatePropertySourceWhenEnterPressed="mah:NumericUpDown.Value"/>
</UserControl>

