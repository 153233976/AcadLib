<wpf:BaseUserControl x:Class="AcadLib.PaletteProps.IntValueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcadLib.PaletteProps"
		xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
		xmlns:wpf="clr-namespace:NetLib.WPF;assembly=NetLib"
		d:DataContext="{d:DesignInstance local:IntValueVM}"
             mc:Ignorable="d" >
    <mah:NumericUpDown Value="{Binding Value, UpdateSourceTrigger=LostFocus}" Minimum="{Binding Min}" Maximum="{Binding Max}" 
                       NumericInputMode="Numbers" IsReadOnly="{Binding IsReadOnly}"
                       local:InputBindingsManager.UpdatePropertySourceWhenEnterPressed="mah:NumericUpDown.Value"/>
</wpf:BaseUserControl>

