<UserControl x:Class="AcadLib.WPF.Controls.AcadColorPick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcadLib.WPF.Controls"
             xmlns:converters="clr-namespace:AcadLib.WPF.Converters"
             mc:Ignorable="d" 
             Name="parent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding ElementName=parent}">
        <Button Background="{Binding Color, Converter={converters:ColorToBrushConverter}}" MinWidth="50"
            Click="SelectColor" ToolTip="Выбор цвета">
            <TextBlock Text="{Binding Color, Converter={converters:ColorNameConverter}}" />
        </Button>
    </Grid>
</UserControl>
